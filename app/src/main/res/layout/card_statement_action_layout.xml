<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="20sp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView
                android:id="@+id/transferType"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mastercard_128"
                android:contentDescription="@string/card_type_descr"/>

        <TextView
                android:id="@+id/actionDescr"
                android:layout_gravity="left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="With a debit card (also known as a bank card, check card or some other description) when a cardholder makes a purchase"
                android:textSize="10sp"
                android:layout_marginStart="10dp"/>

    </LinearLayout>


    <TextView
            android:id="@+id/actionTimestamp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="14.12.18 04:24"
            android:fontFamily="@string/font_family_light"
            />

</LinearLayout>